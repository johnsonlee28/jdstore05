<% if current_user %>
  <% unless product.find_collect(current_user) %>
    <%= link_to collect_product_path(product), :method => :post, :remote => true, :class => "btn btn-danger" do%>
      <i class="fa fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to uncollect_product_path(product), :method => :post, :remote => true, :class => "btn btn-default" do%>
      <i class="fa fa-heart-o"></i>
    <% end %>
  <% end %>
<% end %>
