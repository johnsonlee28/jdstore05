<% if current_user %>
  <% unless product.find_collect(current_user) %>
    <%= link_to collect_product_path(product), :method => :post, :remote => true, style:"color:red;" do%>
      <i class="fa fa-heart" aria-hidden="true"></i>
    <% end %>
  <% else %>
    <%= link_to uncollect_product_path(product), :method => :post, :remote => true, style: "color:gray;" do%>
      收藏 <i class="fa fa-heart-o" aria-hidden="true"></i>
    <% end %>
  <% end %>
<% end %>
