<div class="container">
  <% if @query_string.blank? %>
    <div class="search-info-title">
      Sorry, The search content cannot be blank, please type some product into to search.
    </div>
  <% elsif @products.blank? %>
    <h2 class="search-info-title">搜索信息不能为空，请输入关键字</h2>
  <% else %>
    <h2 class="search-info-title">有关 "<%= @query_string %>" 的产品信息</h2>
    <div class="search-result">
      <div class="prodct-table">
        <% @products.each do |product|%>
          <div class="col-md-3 col-xs-6">
            <div class="show-image">
              <% if product.image.present? %>
                <%= image_tag(product.image.thumb.url, class: "thumbnail")%>
              <% else %>
                <%= image_tag("http://water-farmer.com.tw/images/nopic.gif", class: "thumbnail")%>
              <% end %>
            </div>
            <p ><%= link_to(render_highlight_content(product,@query_string),product_path(product)) %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
<div class="text-center">
  <%= will_paginate(@products, render: BootstrapPagination::Rails)%>
</div>
