<div class="container-fluid">

    <h2 class="text-center">修改商品</h2>

    <%= simple_form_for [:admin, @product] do |f| %>

      <div class="group">
        <%= f.input :title, :label => "商品名称" %>
      </div>

      <div class="group">
        <%= f.input :description, :label => "商品介绍" %>
      </div>

      <div class="group">
        <%= f.input :quantity, :label => "数量" %>
      </div>

      <div class="group">
        <%= f.input :price, :label => "价格" %>
      </div>

      <% if @product.image.present? %>
        <span>目前商品图</span>
        <%= image_tag(@product.image.thumb.url) %>
      <% end %>

      <div class="group">
        <%= f.input :image, as: :file %>
      </div>
      
      <div class="group">
        <%= f.select :category_id, @categories %>
      </div>

      <%= f.submit "Submit", data: {disable_with: "Submitting..."} %>

    <% end %>

</div>
